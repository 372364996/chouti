<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/teacher_listview_item_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_returnlogin"
                android:src="@drawable/hanzhilogo" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#484848"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/xingxing"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@id/title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/image"
                android:src="@drawable/xingxing" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/title"
                android:layout_toRightOf="@id/xingxing"
                android:text="5.0"
                android:textColor="#adadad"
                android:textSize="13sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/title"
                android:text="外教"
                android:textColor="#adadad"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/zan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/zan" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginTop="15dp"
                android:textColor="#adadad"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_alignParentBottom="true"
                android:text="#上课前务必检查自己的网络状态"
                android:textColor="#51a7a9"
                android:textSize="14sp" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>