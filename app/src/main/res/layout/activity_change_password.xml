<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.ChangePasswordActivity">

    <include layout="@layout/view_toolbar_lay" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/nav_header_desc"
            app:srcCompat="@drawable/hanzhilogo" />

        <EditText
            android:id="@+id/et_password1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_edittext"
            android:hint="旧密码"
            android:inputType="text"
            android:paddingLeft="30dp" />
        <EditText
            android:id="@+id/et_password2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:hint="新密码"
            android:inputType="textPassword"
            android:paddingLeft="30dp" />

        <EditText
            android:id="@+id/et_password3"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:paddingLeft="30dp" />


        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_yuanjiao"
            android:enabled="true"
            android:stateListAnimator="@null"
            android:text="@string/wallet_to_weichat_affirm"
            android:textColor="#fbfdfd" />
    </LinearLayout>


</LinearLayout>