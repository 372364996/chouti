<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12"
        android:gravity="center"
        android:textColor="@color/color_button_primary"
        android:textSize="@dimen/sp_14"
        android:text="@string/my_class_appraise_title"/>
    <RatingBar
        android:id="@+id/rb_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5"/>
    <EditText
        android:id="@+id/et_appraise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/two_border_bg"
        android:minLines="5"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_color_33"/>
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_44"
        android:background="@color/white"
        android:textColor="@color/color_button_primary"
        android:textSize="@dimen/sp_14"
        android:text="@string/my_class_appraise_submit"/>

</LinearLayout>