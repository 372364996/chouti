<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_12">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_head_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/hanzhilogo"/>
    <RelativeLayout
        android:id="@+id/rl_user_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_head_img"
        android:layout_marginLeft="@dimen/dp_8">
        <TextView
            android:id="@+id/tv_appraise_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_99"
            android:textSize="@dimen/sp_12"
            tools:text="@string/class_apply_table_copyright"/>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_33"
            android:textSize="@dimen/sp_14"
            tools:text="@string/class_apply_table_copyright"/>
        <TextView
            android:id="@+id/tv_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_user_name"
            android:layout_marginLeft="@dimen/dp_16"
            android:textColor="@color/text_color_33"
            android:textSize="@dimen/sp_12"
            tools:text="@string/class_apply_table_copyright"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_appraise_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_head_img"
        android:layout_below="@+id/rl_user_lay"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_color_99"
        tools:text="@string/class_apply_table_copyright"/>
</RelativeLayout>