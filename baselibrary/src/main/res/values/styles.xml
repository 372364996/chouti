<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="ProgressDialogFragmentDialog">
        <item name="android:background">@drawable/progress_dialog_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/progress_dialog_fragment_dialog_width</item>
        <item name="android:minHeight">@dimen/progress_dialog_fragment_dialog_height</item>
    </style>
    <style name="ProgressDialogFragmentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/progress_dialog_fragment_dialog_text_paddingTop
        </item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/progress_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/progress_dialog_fragment_text_color</item>
    </style>
</resources>