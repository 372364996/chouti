<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    android:id="@+id/ll_empty">
  <ImageView
      android:id="@+id/iv_no_network"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintWidth_default="percent"
      app:layout_constraintWidth_percent="0.67"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="@dimen/dp_80"
      android:layout_marginRight="@dimen/dp_80"
      android:layout_marginTop="@dimen/dp_80"
      android:scaleType="fitXY"
      android:adjustViewBounds="true"
      android:src="@drawable/notice_nonetwork"/>
  <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/iv_no_network"
      android:layout_below="@+id/iv_no_network"
      android:gravity="center"
      android:text="@string/empty_network_error"
      android:textColor="#e7e4e4"
      android:textSize="@dimen/sp_12"/>
</androidx.constraintlayout.widget.ConstraintLayout>